<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SyFragment"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#00C0E4"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_marginLeft="12dp"
            android:layout_width="72dp"
            android:layout_height="22dp"
            android:text="保利香雪"
            android:textSize="18dp"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            />
        <ImageView
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:layout_width="9dp"
            android:layout_height="5dp"
            android:layout_gravity="center"
            android:src="@drawable/down"
            />
        <ImageView
            android:layout_width="19dp"
            android:layout_height="21dp"
            android:src="@drawable/message"
            android:layout_marginLeft="400dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="9dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        >
        <com.youth.banner.Banner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_width="27dp"
                android:layout_height="26dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="7dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/wyjf"
                android:id="@+id/iv_dc"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="缴物业费"
                android:id="@+id/jwyf"
                android:gravity="center"
                android:textColor="#585858"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_width="27dp"
                android:layout_height="26dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="7dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/wybx"
                android:id="@+id/wybx"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我要报修"
                android:id="@+id/t_wybx"
                android:gravity="center"
                android:textColor="#585858"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_width="27dp"
                android:layout_height="26dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="7dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/wysq"
                android:id="@+id/wysq"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="物业诉求"
                android:id="@+id/t_wysq"
                android:gravity="center"
                android:textColor="#585858"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_width="27dp"
                android:layout_height="26dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="7dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/yygh"
                android:id="@+id/yygh"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="预约挂号"
                android:id="@+id/t_yygh"
                android:gravity="center"
                android:textColor="#585858"/>
        </LinearLayout>
    </LinearLayout>
    <View android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="#808080"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginTop="25dp"
                android:layout_marginLeft="22dp"
                android:layout_width="32dp"
                android:layout_height="29dp"
                android:src="@drawable/sqtt"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_marginTop="13dp"
            >
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="250dp"
                android:layout_height="25dp">
                <ImageView

                    android:layout_marginTop="18dp"
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:src="@drawable/shape"
                    />
                <TextView
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:textColor="#282828"
                    android:fontFamily="MicrosoftYaHei"
                    android:textSize="12dp"
                    android:text="智慧社区为社区业主提供各类生活家居服务"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="250dp"
                android:layout_height="22dp">
                <ImageView
                    android:layout_marginTop="7dp"
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:src="@drawable/shape"
                    />
                <TextView
                    android:layout_marginLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:textColor="#282828"
                    android:fontFamily="MicrosoftYaHei"
                    android:textSize="12dp"
                    android:text="智慧社区为社区业主提供各类"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#EFEFEF"
        android:layout_alignParentBottom="true"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="220dp">
        <ImageView
            android:scaleType="centerCrop"
            android:layout_width="268dp"
            android:layout_height="match_parent"
            android:src="@drawable/wygj"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#EFEFEF"
            android:layout_gravity="center_horizontal"
            />
        <ImageView
            android:scaleType="centerCrop"
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:src="@drawable/llqz"
            />
    </LinearLayout>
    <View android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="#EFEFEF"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="112dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fxsh"
            android:scaleType="centerCrop"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#EFEFEF"
        android:layout_alignParentBottom="true"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <ImageView
            android:scaleType="centerCrop"
            android:layout_width="268dp"
            android:layout_height="match_parent"
            android:src="@drawable/rmhd"
            />
        <ImageView
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:src="@drawable/jfrd"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#EFEFEF"
        android:layout_alignParentBottom="true"
        />
</LinearLayout>
