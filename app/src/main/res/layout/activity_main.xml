<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".activity.MainAcivity"
    >
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#00C0E4"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/ly_shouye"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_shouye"
                android:layout_width="27dp"
                android:layout_height="26dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="4dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/main_home"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="首页"
                android:id="@+id/tv_shouye"
                android:gravity="center"
                android:textColor="#FFFFFF"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/ly_shangjia"
            android:orientation="vertical">
            <ImageView
                android:layout_width="27dp"
                android:layout_height="26dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="4dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/maijia"
                android:id="@+id/iv_shangjia"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="商家"
                android:id="@+id/tv_shangjia"
                android:gravity="center"
                android:textColor="#FFFFFF"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/ly_linli"
            android:orientation="vertical">
            <ImageView
                android:layout_width="27dp"
                android:layout_height="26dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="4dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/lingli"
                android:id="@+id/iv_linli"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="邻里"
                android:id="@+id/tv_lingli"
                android:gravity="center"
                android:textColor="#FFFFFF"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/ly_me"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_me"
                android:layout_width="27dp"
                android:layout_height="26dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="4dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/wode"
                />
            <TextView
                android:id="@+id/tv_me"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我的"
                android:gravity="center"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
